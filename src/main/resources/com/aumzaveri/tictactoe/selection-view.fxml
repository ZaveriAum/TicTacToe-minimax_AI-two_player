      <Button fx:id="cross_btn1" layoutX="456.0" layoutY="292.0" mnemonicParsing="false" onAction="#onCircleSelect" prefHeight="49.0" prefWidth="139.0" style="-fx-background-color: brown;" text="Circle" textAlignment="CENTER" textFill="WHITE">
