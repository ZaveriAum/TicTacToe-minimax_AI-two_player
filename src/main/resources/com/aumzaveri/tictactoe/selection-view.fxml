<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="selection_anchor_pane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: F3C623;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aumzaveri.Controller.TurnSelection">
   <children>
      <Label  layoutX="177.0" layoutY="23.0" text="Cross Or Circle">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <Button fx:id="exit_btn" layoutX="14.0" layoutY="11.0" mnemonicParsing="false" onAction="#onExit" style="-fx-background-color: red;" text="Exit" textFill="WHITE" />
      <Button fx:id="cross_btn" layoutX="87.0" layoutY="162.0" mnemonicParsing="false" onAction="#onCrossSelect" style="-fx-background-color: brown;" text="Cross" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font size="48.0" />
         </font>
      </Button>
      <Button fx:id="circle_btn" layoutX="332.0" layoutY="162.0" mnemonicParsing="false" onAction="#onCircleSelect" style="-fx-background-color: brown;" text="Circle" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font size="48.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
